[
    {
        "label": "Username",
        "id": "username",
        "type": "text",
        "placeholder": "For example: John Doe",
        "maxLength": 50,
        "size": "40",
        "required": true
    },
    {
        "label": "Email",
        "id": "email",
        "type": "email",
        "placeholder": "For example: example@mail.com",
        "maxLength": 50,
        "size": "40",
        "required": true
    },
    {
        "label": "Password",
        "id": "pass",
        "type": "password",
        "placeholder": "For example: *********",
        "minLength": 6,
        "maxLength": 50,
        "size": "40",
        "required": true,
        "help": "Password length must be between 6 and 50 characters"
    }
]